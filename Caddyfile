(security_headers) {
  header {
    Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"
    Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; img-src 'self' data: https:; font-src 'self' https://fonts.gstatic.com; connect-src 'self' wss: https:; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; worker-src 'blob'"
    X-Content-Type-Options "nosniff"
    X-Frame-Options "DENY"
    X-XSS-Protection "1; mode=block"
    Referrer-Policy "strict-origin-when-cross-origin"
    Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=()"
    -Server
  }
}

# tools.maxzilla.nl - API with secret header
tools.maxzilla.nl {
  handle /crush* {
    uri strip_prefix /crush
    reverse_proxy 172.18.0.1:3001
  }
  handle /v1/* {
    @valid_key header X-Energy-Key 79701c50993b4528dcdd748f5022874c82b1f459555331974bd1daf09da9fa2e
    handle @valid_key {
      reverse_proxy 172.18.0.1:42069
    }
    respond "Unauthorized" 403
  }
  handle {
    root * /var/www/tools.maxzilla.nl
    file_server browse
  }
}

# PNGCrush Pro - image optimizer
pngcrush.maxzilla.nl {
  reverse_proxy 172.18.0.1:3001
}

